{%- set identifier = project_name|replace(' ', '-')|regex_replace('(?<=[a-zA-Z])([A-Z])', '-\\1')|lower -%}
{
  "identifier": "com.seeq.{{ identifier }}",
  "name": "{{ project_name }}",
  "description": "{{ project_description }}",
  "version": "{{ project_version }}",
  "maintainer": "{{ project_maintainer }}",
  "license": "{{ project_license }}",
  "icon": "{{ project_icon }}",
  "elements": [
    {
      "name": "Signal Math Add-on",
      "identifier": "com.seeq.{{identifier}}.addontool",
      "description": "What does this describe?",
      "type": "AddOnTool",
      "path": "addOnToolElement",
      "notebook_file_path": "myOldAddOn_deployment.ipynb",
      "resource_size": "GP_S",
      "extensions": ["ipyvuetify", "widgetsnbextension", "ipyvue"],
      "configuration_schema": {
        "type": "object",
        "properties": {
          "display": {
            "type": "object",
            "properties": {
              "icon": {
                "type": "string",
                "default": "fa-bullseye"
              },
              "linkType": {
                "enum": ["window", "tab", "none"],
                "default": "window"
              },
              "sortKey": {
                "type": "string",
                "default": "S"
              },
              "windowDetails": {
                "type": "string",
                "default": "toolbar=0,location=0,scroll"
              }
            },
            "required": [
              "icon",
              "linkType",
              "sortKey",
              "windowDetails"
            ]
          },
          "project": {
            "type": "object",
            "properties": {
              "my special value": {
                "type": "string",
                "default": "My Project"
              },
              "signal": {
                "type": "string",
                "default": "My Signal"
              },
              "My configuration": {
                "type": "object",
                "properties": {
                  "my second value value": {
                    "type": "string",
                    "default": "My improved value"
                  },
                  "signal2": {
                    "type": "string",
                    "default": "My second signal"
                  }
                },
                "required": [
                ]

              }
            },
            "required": [
              "My configuration"
            ]

          }

        },
        "required": [
          "display",
          "project"
        ]
      },
      "configuration_filename": "config",
      "configuration_converter": "json"
    }
  ],
  "previews": [],
  "tags": {}
}
