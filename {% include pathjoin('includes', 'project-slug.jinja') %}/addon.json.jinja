{%- set project_slug -%}
{% include pathjoin('includes', 'project-slug.jinja') %}
{%- endset -%}
{%- set identifier = project_slug | trim -%}

{
  "identifier": "com.seeq.{{ identifier }}",
  "name": "{{ project_name }}",
  "description": "{{ project_description }}",
  "version": "{{ project_version }}",
  "maintainer": "{{ project_maintainer }}",
  "license": "{{ project_license }}",
  "icon": "{{ project_icon }}",
  "elements": [
    {% if 'AddOnTool' in elements_to_include %}

    {%- set addon_tool_slug -%}
    {% include pathjoin('includes', 'addon-tool-slug.jinja') %}
    {%- endset -%}
    {%- set add_on_path = addon_tool_slug | trim -%}

    {
      "name": "{{ addOnTool_name }}",
      "identifier": "com.seeq.{{identifier}}.addontool",
      "description": "{{ addOnTool_description }}",
      "type": "AddOnTool",
      "path": "{{ add_on_path }}",
      "notebook_file_path": "addon_tool_example_target_notebook.ipynb",
      "resource_size": "{{ addOnTool_resource_size }}",
      "extensions": ["ipyvuetify", "widgetsnbextension", "ipyvue"],
      "configuration_schema": {
        "type": "object",
        "properties": {
          "display": {
            "type": "object",
            "properties": {
              "icon": {
                "type": "string",
                "default": "{{ addOnTool_icon }}"
              },
              "linkType": {
                "enum": ["window", "tab", "none"],
                "default": "window"
              },
              "sortKey": {
                "type": "string",
                "default": "S"
              },
              "windowDetails": {
                "type": "string",
                "default": "toolbar=0,location=0,scroll"
              }
            },
            "required": [
              "icon",
              "linkType",
              "sortKey",
              "windowDetails"
            ]
          },
          "project": {
            "type": "object",
            "properties": {
              "my special value": {
                "type": "string",
                "default": "My Project"
              },
              "signal": {
                "type": "string",
                "default": "My Signal"
              },
              "My configuration": {
                "type": "object",
                "properties": {
                  "my second value value": {
                    "type": "string",
                    "default": "My improved value"
                  },
                  "signal2": {
                    "type": "string",
                    "default": "My second signal"
                  }
                },
                "required": [
                ]

              }
            },
            "required": [
              "My configuration"
            ]

          }

        },
        "required": [
          "display",
          "project"
        ]
      },
      "configuration_filename": "config",
      "configuration_converter": "json"
    }
    {% endif %}
  ],
  "previews": [],
  "tags": {}
}
